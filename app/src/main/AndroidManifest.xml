<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.w3engineers.meshrnd">

    <uses-permission
        android:name="android.permission.INTERNET"
        android:required="true" />
    <!-- WIFI Direct, Ethernet, Multicast- and Bonjour-Beacon -->
    <uses-permission
        android:name="android.permission.ACCESS_WIFI_STATE"
        android:required="true" />
    <uses-permission
        android:name="android.permission.CHANGE_WIFI_STATE"
        android:required="true" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-feature android:name="android.hardware.bluetooth_le"
        android:required="true"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/AppTheme">
        <activity android:name=".ui.createuser.CreateUserActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.chat.ChatActivity"
            android:screenOrientation="portrait"
            android:label="Chat"/>
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"/>
        <activity
            android:name=".ui.group.GroupChatActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name"/>

        <activity android:name=".bluetooth.BluetoothDemo"
            android:screenOrientation="portrait"/>
        <activity android:name=".bluetooth.bluechat.MainActivity2"
            android:screenOrientation="portrait"/>
        <activity android:name=".bluetooth.bluechat.DeviceListActivity"/>

        <activity android:name=".ui.group.BottomNavActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>